<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/locationtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:   "
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="14dp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/locationtxt"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/typestxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:   "
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="14dp"
        android:layout_below="@id/locationtxt"/>

    <TextView
        android:id="@+id/types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/typestxt"
        android:textSize="20sp"
        android:layout_below="@id/location"/>

    <TextView
        android:id="@+id/pricetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:   "
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="14dp"
        android:layout_below="@id/typestxt"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pricetxt"
        android:textSize="20sp"
        android:layout_below="@id/types"/>

    <TextView
        android:id="@+id/phonetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:   "
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="14dp"
        android:layout_below="@id/pricetxt"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phonetxt"
        android:textSize="20sp"
        android:layout_below="@id/price"/>


    <TextView
        android:id="@+id/emailtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:   "
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="14dp"
        android:layout_below="@id/phonetxt"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phonetxt"
        android:textSize="20sp"
        android:layout_below="@id/phone"/>
    <TextView
        android:id="@+id/imagetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="14dp"
        android:layout_below="@id/emailtxt"/>

    <ImageView
        android:id="@+id/image"
        android:layout_below="@id/imagetxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"         />



</RelativeLayout>